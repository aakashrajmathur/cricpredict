@{ 
    string inputStandings = (string)ViewData["Standings"];
    List<string> standings = new List<string>();
    var tokens = inputStandings.Split(',');
    foreach (string token in tokens)
    {
        standings.Add(token);
    }
}

<div class="container">
    <h5 style="padding-left:10px">Current Standings</h5>
    <div id="standings"></div>
</div>

<script type="text/javascript">
    @{ string standingsAsString = string.Join(",", standings.ToArray()); }
    var standingsJSTemp = '@standingsAsString';
    var standingsJSTokens = standingsJSTemp.split(",");

    //var standingsJS = [];
    for (i = 0; i < standingsJSTokens.length; i=i+8)
    {
        //standingsJS.push({ "TeamName": standingsJSTokens[i], "W": standingsJSTokens[i + 2], "L": standingsJSTokens[i + 3], "T": standingsJSTokens[i + 4], "Pts": standingsJSTokens[i + 5], "NRR": standingsJSTokens[i + 6], "PlayoffPercentage": standingsJSTokens[i + 7] });
    }
    var content = "";
    content += "<table>";
    content += "        <thead>";
    content += "          <tr>";
    content += "              <th>Team</th>";
    content += "              <th>Played</th>";
    content += "              <th>Wins</th>";
    content += "              <th>Loss</th>";
    content += "              <th>N/R</th>";
    content += "              <th>Points</th>";
    content += "              <th>NRR</th>";
    content += "          </tr>";
    content += "        </thead>";
    content += "";
    content += "        <tbody>";
    //alert(standingsJSTokens.length);
    for (i = 0; i < standingsJSTokens.length; i = i + 8) {
        content += "          <tr>";    
        //alert(standingsJSTokens[i]);
        content += "            <td>" + standingsJSTokens[i] + "</td>";
        content += "            <td>" + standingsJSTokens[i + 1] + "</td>";
        content += "            <td>" + standingsJSTokens[i + 2] + "</td>";
        content += "            <td>" + standingsJSTokens[i + 3] + "</td>";
        content += "            <td>" + standingsJSTokens[i + 4] + "</td>";
        content += "            <td>" + standingsJSTokens[i + 5] + "</td>";
        content += "            <td>" + standingsJSTokens[i + 6] + "</td>";
        content += "          </tr>";
    }
    content += "        </tbody>";
    content += "      </table>";

    document.getElementById("standings").innerHTML = content;
</script>

















