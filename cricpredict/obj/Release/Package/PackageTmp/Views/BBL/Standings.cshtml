
@{
    ViewBag.Title = "Standings";
}

<h2>Standings</h2>

<div class="btn-group">
    <button type="button" class="btn btn-primary">Standings</button>
    <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Games", "BBL")'">Games</button>
    <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Graph", "BBL")'">Graph</button>
</div>

<h2>Remaining Games</h2>
<div class="container">
    <div class="row">
        @{
            for (int i = 0; i < 12; i++)
            {
                <div class="col-sm-4 panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-1" style="background-color:orange">.</div>
                            <div class="col-xs-9">Hyderabad Sunrisers</div>
                            <input type="checkbox" class="col-xs-1" />
                        </div>
                        <div class="row">
                            <div class="col-xs-1" style="background-color:darkblue">.</div>
                            <div class="col-xs-9">Mumbai Indians</div>
                            <input type="checkbox" class="col-xs-1" />
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<select id="MovieType" name="MovieType">

    <option value=""></option>

    <option value="0" onselect="location.href='@Url.Action("Games", "BBL", "Testing input")'">Action</option>

    <option value="1">Drama</option>

    <option selected="selected" value="2">Comedy</option>

    <option value="3">Science Fiction</option>

</select>


<div class="dropdown">
    <button class="btn btn-default dropdown-toggle" type="button" id="menu1" data-toggle="dropdown">
        @{ if (ViewData["Date"] == null)
            { <Text>Today</Text>}
            else
            { @ViewData["Date"] }
        }
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu" aria-labelledby="menu1">
        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">@Html.ActionLink("Today", "Standings", "BBL", new { date = "Today" }, null)</a></li>
        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">@Html.ActionLink("31st Jan 2018 (After Game 39)", "Standings", "BBL", new { date = "After Game 39" }, null)</a></li>
        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">@Html.ActionLink("30st Jan 2018 (After Game 38)", "Standings", "BBL", new { date = "After Game 38" }, null)</a></li>
        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">@Html.ActionLink("29st Jan 2018 (After Game 37)", "Standings", "BBL", new { date = "After Game 37" }, null)</a></li>
        
    </ul>
</div>

<li>@Html.ActionLink("Indian Premier League", "Index", "IPL")</li>