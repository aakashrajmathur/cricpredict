
@{
    ViewBag.Title = "Games";
}

<h2>Games</h2>

<div class="btn-group">
    <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Standings", "BBL")'">Standings</button>
    <button type="button" class="btn btn-primary">Games</button>
    <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Graph", "BBL")'">Graph</button>
</div>

<h2>Remaining Games</h2>
<div class="container">
    <div class="row">
        @{
            for (int i = 0; i < 12; i++)
            {
                <div class="col-sm-4 panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-1" style="background-color:orange">.</div>
                            <div class="col-xs-9">Hyderabad Sunrisers</div>
                            <input type="checkbox" class="col-xs-1" />
                        </div>
                        <div class="row">
                            <div class="col-xs-1" style="background-color:darkblue">.</div>
                            <div class="col-xs-9">Mumbai Indians</div>
                            <input type="checkbox" class="col-xs-1" />
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>