<!-- Modal Trigger -->
<div style="background-color:#1e88e5;padding:20px">
    <div class="container">
        <div class="row">

            <div class="col s3 center-align"><a class="modal-trigger white-text" style="font-size:large" href="#modal1">Privacy</a></div>
            <div class="col s3 center-align"><a class="modal-trigger white-text" style="font-size:large" href="#modal2">FAQ</a></div>
            <div class="col s3 center-align"><a class="modal-trigger white-text" style="font-size:large" href="#modal3">About</a></div>
            <div class="col s3 center-align"><a class="modal-trigger white-text" style="font-size:large" href="#modal4">Suggestions</a></div>
        </div>
    </div>
</div>


<!-- Modal Structure -->
<div id="modal1" class="modal">
    <div class="modal-content">
        <h4>Privacy Policy</h4><br />
        <p>Content under development</p><br />
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-close waves-effect waves-green btn-flat">Close</a>
    </div>
</div>


<div id="modal2" class="modal">
    <div class="modal-content">
        <h4>Frequently Asked Questions</h4><br />
        <p>Content under development</p><br />
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-close waves-effect waves-green btn-flat">Close</a>
    </div>
</div>

<div id="modal3" class="modal">
    <div class="modal-content">
        <h4>About</h4><br />
        <p>CricPredict is a sports analysis platform. We analyze possible outcomes of future games in a tournament and compute the mathematical percentage chance for each team to make it to the playoffs.</p>
        <p>Additionally, users can check out how the standings change when a team wins an upcoming game. The user can select either team to win an upcoming game, and as the winner of an upcoming game changes we refresh the projected standings to reflect the change.</p>
        <br />
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-close waves-effect waves-green btn-flat">Close</a>
    </div>
</div>

<div id="modal4" class="modal">
    <div class="modal-content">
        <h4>Suggestions & Comments</h4><br />
        <div class="row">
            <form class="col s12" method="post">
                <div class="row">
                    <div class="input-field col s10">
                        <i class="material-icons prefix" style="color:#1e88e5">mode_edit</i>
                        <textarea name="suggestions" id="icon_prefix2" class="materialize-textarea blue-grey-text"></textarea>
                        <label for="icon_prefix2">Suggestions & Comments</label>
                    </div>
                    <div class="col s2">
                        <button class="btn-large waves-effect waves-light white" type="submit" name="action" style="margin-top:10px">
                            <i class="material-icons large" style="color:#1e88e5">send</i>
                        </button>

                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-close waves-effect waves-green btn-flat">Close</a>
    </div>
</div>

<script type="text/javascript">
    var batsmenJS = [];
    var bowlersJS = [];

    window.onload = function () {
        var elemsModal = document.querySelectorAll('.modal');
        var instances = M.Modal.init(elemsModal, {});

        batsmenJS = '@batsmen'.split(",");
        bowlersJS = '@bowlers'.split(",");
        document.getElementById("batsmenContent").innerHTML = GetBatsmenContent();       
        document.getElementById("bowlersContent").innerHTML = GetBowlersContent();             
    }

    function GetBatsmenContent() {
        var content = "";

        for (i = 0; i < 5; i++) {
            content += "<li class=\"collection-item avatar\">";
            content += "<img src=\"/Content/IPL/Logos/" + batsmenJS[i * 7 + 6] + ".png\" alt=\"\" class=\"circle\">";
            content += "<div class=\"row\">";
            content += "<div class=\"col s12\"><h6 style='offset-left:20px;font-weight: bold'>" + batsmenJS[i * 7] + " </h6> </div>";
            content += "<div class=\"col s3 m2\"><p class=\"right-align\">Runs</p> </div>"; content += "<div class=\"col s3 m2\"><p style='font-weight: bold'>" + batsmenJS[i * 7 + 2] + "</p> </div>";
            content += "<div class=\"col s3 m2\"><p class=\"right-align\">Matches</p> </div>"; content += "<div class=\"col s3 m2\"><p style='font-weight: bold'>" + batsmenJS[i * 7 + 1] + "</p> </div>";
            content += "<div class=\"col s3 m2\"><p class=\"right-align\">Best</p> </div>"; content += "<div class=\"col s3 m2\"><p style='font-weight: bold'>" + batsmenJS[i * 7 + 3] + "</p> </div>";
            content += "<div class=\"col s3 m2\"><p class=\"right-align\">Avg</p> </div>"; content += "<div class=\"col s3 m2\"><p style='font-weight: bold'>" + batsmenJS[i * 7 + 4] + "</p> </div>";
            content += "<div class=\"col s3 m2\"><p class=\"right-align\">SR</p> </div>"; content += "<div class=\"col s3 m2\"><p style='font-weight: bold'>" + batsmenJS[i * 7 + 5] + "</p> </div>";
            content += "<div class=\"col s12\"><p>" + batsmenJS[i * 7 + 6] + "</p> </div>";
            content += "</div>";
            content += "<a href=\"#!\" class=\"secondary-content\"><i class=\"material-icons\" style='color:#ffc400'>grade</i></a>";
            content += "</li>";
        }
        return content;
    }

    function GetBowlersContent() {
        var content = "";
        
        for (i = 0; i < 5; i++) {
            content += "<li class=\"collection-item avatar\">";
            content += "<img src=\"/Content/IPL/Logos/" + bowlersJS[i*8 + 7] + ".png\" alt=\"\" class=\"circle\">";
            content += "<div class=\"row\">";
            content += "<div class=\"col s12\"><h6 style='offset-left:20px;font-weight: bold'>" + bowlersJS[i * 8] + " </h6> </div>";
            content += "<div class=\"col s3 m2\"><p class=\"right-align\">Wickets</p> </div>"; content += "<div class=\"col s3 m2\"><p style='font-weight: bold'>" + bowlersJS[i * 8 + 2] + "</p> </div>";
            content += "<div class=\"col s3 m2\"><p class=\"right-align\">Matches</p> </div>"; content += "<div class=\"col s3 m2\"><p style='font-weight: bold'>" + bowlersJS[i * 8 + 1] + "</p> </div>";
            content += "<div class=\"col s3 m2\"><p class=\"right-align\">Best</p> </div>"; content += "<div class=\"col s3 m2\"><p style='font-weight: bold'>" + bowlersJS[i * 8 + 3] + "</p> </div>";
            content += "<div class=\"col s3 m2\"><p class=\"right-align\">Avg</p> </div>"; content += "<div class=\"col s3 m2\"><p style='font-weight: bold'>" + bowlersJS[i * 8 + 4] + "</p> </div>";
            content += "<div class=\"col s3 m2\"><p class=\"right-align\">Econ</p> </div>"; content += "<div class=\"col s3 m2\"><p style='font-weight: bold'>" + bowlersJS[i * 8 + 5] + "</p> </div>";
            content += "<div class=\"col s3 m2\"><p class=\"right-align\">SR</p> </div>"; content += "<div class=\"col s3 m2\"><p style='font-weight: bold'>" + bowlersJS[i * 8 + 6] + "</p> </div>";
            content += "<div class=\"col s12\"><p>" + bowlersJS[i * 8 + 7] + "</p> </div>";
            content += "</div>";
            content += "<a href=\"#!\" class=\"secondary-content\"><i class=\"material-icons\" style='color:#ffc400' >grade</i></a>";
            content += "</li>"
        }
        return content;
    }

    var backgroundColor = ["yellow", "red lighten-2", "red", "deep purple lighten-1", "light blue", "indigo lighten-2", "red accent-4", "deep orange"];

    function GetBackgroundColor(team) {

        if (team.toUpperCase() == "CHENNAI SUPER KINGS")
            return backgroundColor[0];
        else if (team.toUpperCase() == "DELHI DAREDEVILS")
            return backgroundColor[1];
        else if (team.toUpperCase() == "KINGS XI PUNJAB")
            return backgroundColor[2];
        else if (team.toUpperCase() == "KOLKATA KNIGHT RIDERS")
            return backgroundColor[3];
        else if (team.toUpperCase() == "MUMBAI INDIANS")
            return backgroundColor[4];
        else if (team.toUpperCase() == "RAJASTHAN ROYALS")
            return backgroundColor[5];
        else if (team.toUpperCase() == "ROYAL CHALLENGERS BANGALORE")
            return backgroundColor[6];
        else if (team.toUpperCase() == "SUNRISERS HYDERABAD")
            return backgroundColor[7];
    }


