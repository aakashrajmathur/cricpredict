<div class="container">
    <dic class="row">
        <div class="col s12 m6">
            <div class="card-panel orange center-align">
                <h5>ORANGE CAP</h5>
            </div>
            <ul class="collection" id="batsmenContent">
                
            </ul>
        </div>

        <div class="col s12 m6">
            <div class="card-panel deep-purple center-align">
                <h5 class="white-text">PURPLE CAP</h5>
            </div>
