                <div class="panel-body">
                    <table class="table">
                        <tbody>
                            @{
                            var players = ViewData["KP"] as string[];
                            foreach (string player in players)
                            {
                                string[] tokens = player.Split(',');
                                    <tr>
                                        <td style="width:24px">
                                            @{
                                                if (@tokens[2].Trim().Length > 0)
                                                {
                                                    var imgPath = "~/Content/IPL/Logos/" + tokens[2].Trim() + ".png";

                                                    <a href="#" data-toggle="tooltip" data-placement="top" title=@tokens[3]>
                                                        <img height="24" src="@Url.Content(imgPath)" />
                                                    </a>
                                                }
                                            }
                                        </td>
                                        <td>
                                            @tokens[1]
                                            @{
                                            if (tokens[0] == "true")
                                            {
                                                    <img height="16" src="~/Content/IPL/Logos/plane.png" />
                                            }
                                            }
                                        </td>
                                        <td style="width:12px; vertical-align:central">
